<h1 class="text-2xl font-bold mb-4">Users</h1>

<%= link_to "New user",
new_admin_user_path,
class: "inline-block mb-4 px-4 py-2 bg-blue-600 text-white rounded" %>

<table class="min-w-full border">
  <thead>
    <tr class="bg-gray-100">
      <th class="p-2 border">Email</th>
      <th class="p-2 border">Role</th>
      <th class="p-2 border">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td class="p-2 border"><%= user.email %></td>
        <td class="p-2 border"><%= user.role %></td>
        <td class="p-2 border space-x-2">
          <%= link_to "Edit", edit_admin_user_path(user), class: "text-blue-600" %>

          <%= form_tag admin_user_path(user),
                       method: :delete,
                       style: "display:inline" do %>
            <%= submit_tag "Delete",
            class: "text-red-600 bg-transparent border-0 cursor-pointer",
            data: {
              confirm: "Are you sure?"
            } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
