<h1 class="text-2xl font-bold mb-4">Lessons for "<%= @block.title %>"</h1>

<div class="flex justify-between">
  <%= link_to "New Lesson", new_admin_block_lesson_path(@block), class: "bg-indigo-600 text-white px-4 py-2 rounded" %>
  <%= link_to "Back to Blocks", admin_blocks_path, class: "underline" %>
</div>

<table class="mt-6 w-full border">
  <thead>
    <tr class="bg-gray-100">
      <th class="p-2 text-left">Title</th>
      <th class="p-2 text-left">Status</th>
      <th class="p-2 text-right">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @lessons.each do |lesson| %>
      <tr class="border-b">
        <td class="p-2"><%= lesson.title %></td>
        <td class="p-2"><%= lesson.status %></td>
        <td class="p-2 text-right">
          <%= link_to "Edit", edit_admin_block_lesson_path(@block, lesson), class: "text-indigo-600" %>
          <%= link_to "Delete", admin_block_lesson_path(@block, lesson), method: :delete, data: { confirm: "Are you sure?" }, class: "text-red-600 ml-2" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
