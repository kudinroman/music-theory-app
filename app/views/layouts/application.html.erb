<!DOCTYPE html>
<html>
  <head>
    <title>MusicApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="min-h-screen flex flex-col bg-gray-50 font-sans text-gray-900">
    <nav class="bg-gradient-to-r from-blue-600 to-indigo-600 p-4 shadow-md">
      <div class="mx-auto flex justify-between items-center">
        <div class="text-white font-extrabold text-xl tracking-wide">ðŸŽµ MusicApp</div>

        <div class="flex gap-2">
          <%= link_to "Home",
          root_path,
          class: "text-white hover:text-gray-200 font-medium transition" %>

          <% if user_signed_in? %>
            <%= link_to "Edit Profile",
            edit_user_registration_path,
            class: "text-white hover:text-gray-200 font-medium transition" %>

            <%= link_to "Logout",
            destroy_user_session_path,
            data: {
              turbo_method: :delete
            },
            class: "text-white hover:text-gray-200 font-medium transition" %>

            <% if current_user.admin? %>
              <%= link_to "Admin", rails_admin_path, class: "hover:text-gray-300 transition" %>
            <% end %>
          <% else %>
            <%= link_to "Login",
            new_user_session_path,
            class: "text-white hover:text-gray-200 font-medium transition" %>

            <%= link_to "Sign Up",
            new_user_registration_path,
            class:
              "bg-white text-indigo-600 font-semibold px-3 py-1 rounded shadow hover:bg-gray-100 transition" %>
          <% end %>
        </div>

      </div>
    </nav>
    <main class="flex-1 flex items-center justify-center py-10 px-4">
      <div class="w-full max-w-4xl bg-white rounded-xl shadow-lg p-8">
        <%= yield %>
      </div>
    </main>
    <footer
      class="
        bg-gradient-to-r
        from-indigo-600
        to-blue-600
        p-6
        mt-auto
        text-white
      "
    >
      <div
        class="
          max-w-7xl
          mx-auto
          flex
          flex-col
          md:flex-row
          justify-between
          items-center
        "
      >
        <p class="text-sm">&copy; 2025 MusicApp. All rights reserved.</p>
        <div class="flex space-x-4 mt-2 md:mt-0">
          <a href="#" class="hover:text-gray-200 transition duration-200">Privacy</a>
          <a href="#" class="hover:text-gray-200 transition duration-200">Terms</a>
          <a href="#" class="hover:text-gray-200 transition duration-200">Contact</a>
        </div>
      </div>
    </footer>
  </body>
</html>
